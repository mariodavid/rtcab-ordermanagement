<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.roadtocubaandbeyond.ordermanagement.web.lineitem">
    <data>
        <instance id="lineItemDc"
                  class="com.roadtocubaandbeyond.ordermanagement.entity.LineItem"
                  view="lineItem-view">
            <loader/>
        </instance>
        <collection id="productsDc" class="com.roadtocubaandbeyond.ordermanagement.entity.Product" view="_minimal">
            <loader id="productsLc">
                <query>
                    <![CDATA[select e from rtcabo$Product e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="lineItemDc">
            <column width="250px">
                <lookupPickerField id="productField" optionsContainer="productsDc" property="product">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <textField id="priceField" property="price"/>
                <textField id="quantityField" property="quantity"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
