<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.roadtocubaandbeyond.ordermanagement.web.order.OrderBrowse"
        focusComponent="ordersTable"
        lookupComponent="ordersTable"
        messagesPack="com.roadtocubaandbeyond.ordermanagement.web.order">
    <dsContext>
        <groupDatasource id="ordersDs"
                         class="com.roadtocubaandbeyond.ordermanagement.entity.Order"
                         view="order-view">
            <query>
                <![CDATA[select e from rtcabo$Order e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="ordersTable"
            spacing="true">
        <filter id="filter"
                applyTo="ordersTable"
                datasource="ordersDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="ordersTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="createWithDefaults"
                        caption="msg://createWithDefaults"
                        icon="ADD_ACTION"
                />
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="customer"/>
                <column id="orderId"/>
                <column id="orderDate"/>
                <column id="deliveryDate"/>
            </columns>
            <rows datasource="ordersDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="ordersTable.create"/>
                <button id="createWithDefaultsBtn"
                        action="ordersTable.createWithDefaults" />
                <button id="editBtn"
                        action="ordersTable.edit"/>
                <button id="removeBtn"
                        action="ordersTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
